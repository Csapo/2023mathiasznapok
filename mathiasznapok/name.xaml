<Window x:Class="mathiasznapok.name"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mathiasznapok"
        mc:Ignorable="d"
        Title="name" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/results.jpg"/>
        </Grid.Background>
        <Label Content="Add meg a nevedet:" HorizontalAlignment="Left" Margin="56,301,0,0" VerticalAlignment="Top" Width="344" FontSize="36" FontFamily="Rosewood Std Regular" Cursor="ScrollNW"/>
        <TextBox HorizontalAlignment="Left" Margin="503,307,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="202" Height="62" FontFamily="Rosewood Std Regular" FontSize="20">
            <TextBox.Background>
                <ImageBrush/>
            </TextBox.Background>
        </TextBox>
        <Button x:Name="next" Content="Tovább" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Width="204" Height="53" Background="{x:Null}" OpacityMask="Black" FontFamily="Rosewood Std Regular" FontSize="45" Click="next_Click"/>

    </Grid>
</Window>
